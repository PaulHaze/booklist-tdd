{
  "name": "booklist",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel mockserver reactscripts",
    "dv": "json-server --watch src/data/db.json --port 8080 & ESLINT_NO_DEV_ERRORS='true' react-scripts start",
    "reactscripts": "ESLINT_NO_DEV_ERRORS='true' react-scripts start",
    "jsonserver": "json-server --watch src/data/db.json --port 3001",
    "mockserver": "cd src/data && node server",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "e2e": "npx cypress run",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@mantine/core": "^4.2.1",
    "@mantine/form": "^4.2.1",
    "@mantine/hooks": "^4.2.1",
    "@reduxjs/toolkit": "^1.8.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@testing-library/user-event": "^14.1.1",
    "axios": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-icons": "^4.3.1",
    "react-redux": "^8.0.1",
    "react-router-dom": "6.3.0",
    "sass": "^1.50.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.4",
    "cypress": "^9.6.0",
    "eslint": "^8.14.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "json-server": "^0.17.0",
    "postcss": "^8.4.12",
    "prettier": "^2.6.2",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.0.24"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
